{
  "manifest_version": 2,
  "name": "Cocktography for IRCCloud",
  "version": "1.0.0",
  "description": "Encode and decode Cocktographic messages in IRCCloud",
  "browser_specific_settings": {
    "gecko": {
      "id": "cocktography@irccloud.addon",
      "strict_min_version": "79.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "storage",
    "*://*.irccloud.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.irccloud.com/*"],
      "js": ["dicktionaries.js", "cpi.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
