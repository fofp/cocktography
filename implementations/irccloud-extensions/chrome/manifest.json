{
  "manifest_version": 3,
  "name": "Cocktography for IRCCloud",
  "version": "1.0.0",
  "description": "Encode and decode Cocktographic messages in IRCCloud",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.irccloud.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.irccloud.com/*"],
      "js": ["cpi.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dicktionaries/*"],
      "matches": ["*://*.irccloud.com/*"]
    }
  ]
}
